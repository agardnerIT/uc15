{
    "name": "basic devcontainer",
    "forwardPorts": [5000],
    "portsAttributes": {
        "5000": {
            "label": "Ansible Endpoint",
            "onAutoForward": "ignore"
        }
    },
    "hostRequirements": {
        "cpus": 2
    },
    "postCreateCommand": ".devcontainer/post-create.sh",

    "secrets": {
	 	  "DT_ENDPOINT_UC15": {
	            "description": "eg. https://abc12345.live.dynatrace.com"
		},
		  "DT_API_TOKEN_UC15": {
	    	    "description": "Dynatrace API token with these permissions: `metrics.ingest`, `logs.ingest`, `openTelemetryTrace.ingest`, `openpipeline.events_sdlc`"
		}
	}
}